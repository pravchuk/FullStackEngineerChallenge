<div class="profile-view">
  <div class="container">
    <div class="row">
      <div class="col-8">
        <div class="card profile-fields">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Name: {{employee.name}}</li>
            <li class="list-group-item">Role: {{employee.role}}</li>
            <li class="list-group-item">Team: {{employee.team}}</li>
          </ul>
        </div>
      </div>
      <div class="col">
        <img src={{concat "assets/profilepics/" employee.id ".jpeg"}} alt="profilepic" >
      </div>
    </div>
  </div>
  {{ratings-provided employee=employee.id}}
  {{peer-actions addReview=(action "addReview")}}
  {{add-review  
    isEnabled=showAddReview
    employeeTo=employee
    refreshModel=refreshModel
  }}
</div>
